@kernel void triad(const int N,
                   const double alpha,
                   @restrict const double* a,
                   @restrict const double* b,
                   @restrict double* c)
{
  for(int n = 0; n < N; ++n; @tile(256,@outer,@inner))
    if(n < N)
      c[n] = a[n] + alpha * b[n];
}
